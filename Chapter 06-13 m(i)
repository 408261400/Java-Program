public class Main {

    public static void main(String[] args) {
        double m;
        System.out.println("   i                m(i)");
        for (int i = 1; i <= 20; i++) {
            double temp = 1;
            m = 0;
            while (temp <= i) {
                m = m + temp / (temp + 2);
                temp++;
            }
            System.out.printf("%4d%20.4f\n", i, m);
        }
    }
}
