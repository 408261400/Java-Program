import java.util.Scanner;
import java.lang.Math;

public class Main {

    public static void main(String[] args) {
        int number;
        double ans;
        ans = 0;
        Scanner cin = new Scanner(System.in);
        number = cin.nextInt();
        for (int i = 1; i <= number; i++) {
            ans = ans + (Math.pow(-1, i + 1)) / (2 * i - 1);
        }
        ans = ans * 4;
        System.out.println(ans);
    }
}
