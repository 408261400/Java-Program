import java.util.Scanner;
import java.lang.Math;

public class Main {

    public static void main(String[] args) {
        double s, area, degrees,n;
        Scanner cin = new Scanner(System.in);
        n = cin.nextDouble();
        s = cin.nextDouble();
        degrees = Math.PI/n;
        area = n * s * s / (Math.tan(degrees) * 4);
        System.out.println(area);
    }
}
